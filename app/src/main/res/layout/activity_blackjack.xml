<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlackjackActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blackjack_table"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#06402B"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/controls_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/dealer_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dealer"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/blackjack_table"
            app:layout_constraintEnd_toEndOf="@id/blackjack_table"
            app:layout_constraintStart_toStartOf="@id/blackjack_table"
            app:layout_constraintTop_toTopOf="@id/blackjack_table"
            app:layout_constraintVertical_bias="0.042" />

        <TextView
            android:id="@+id/debug_text"
            android:layout_width="389dp"
            android:layout_height="225dp"
            android:text="Debug text"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/blackjack_table"
            app:layout_constraintEnd_toEndOf="@id/blackjack_table"
            app:layout_constraintStart_toStartOf="@id/blackjack_table"
            app:layout_constraintTop_toTopOf="@id/blackjack_table"
            app:layout_constraintVertical_bias="0.457" />


        <LinearLayout
            android:id="@+id/dealer_card_panel"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/blackjack_table"
            app:layout_constraintEnd_toEndOf="@id/blackjack_table"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@id/blackjack_table"
            app:layout_constraintTop_toTopOf="@id/blackjack_table"
            app:layout_constraintVertical_bias="0.049">

            <ImageView
                android:id="@+id/dealer_card1_image"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_marginEnd="1dp"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="centerInside"
                tools:src="@drawable/card_back" />

            <ImageView
                android:id="@+id/dealer_card2_image"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_marginStart="1dp"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="centerInside"
                tools:src="@drawable/card_back" />

        </LinearLayout>

        <TextView
            android:id="@+id/player1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/blackjack_table"
            app:layout_constraintEnd_toEndOf="@id/blackjack_table"
            app:layout_constraintHorizontal_bias="0.858"
            app:layout_constraintStart_toStartOf="@id/blackjack_table"
            app:layout_constraintTop_toTopOf="@id/blackjack_table"
            app:layout_constraintVertical_bias="0.713" />

        <LinearLayout
            android:id="@+id/player1_card_panel"
            android:layout_width="384dp"
            android:layout_height="101dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/border_black"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/blackjack_table"
            app:layout_constraintEnd_toEndOf="@id/blackjack_table"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toStartOf="@id/blackjack_table"
            app:layout_constraintTop_toTopOf="@id/blackjack_table"
            app:layout_constraintVertical_bias="1.0">

            <ImageView
                android:id="@+id/player1_card1_image"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_marginEnd="1dp"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="centerInside"
                tools:src="@drawable/card_back" />

            <ImageView
                android:id="@+id/player1_card2_image"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_marginStart="1dp"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="centerInside"
                tools:src="@drawable/card_back" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <GridLayout
        android:id="@+id/controls_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2"
        app:layout_constraintBottom_toTopOf="@+id/bottom_spacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blackjack_table">

        <Button
            android:id="@+id/new_game_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="New Game" />

        <Button
            android:id="@+id/draw_card_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Draw Card" />

        <Button
            android:id="@+id/debug_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Debug" />

        <Button
            android:id="@+id/deal_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Deal" />

        <Button
            android:id="@+id/double_down_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Double Down" />

        <Button
            android:id="@+id/bet_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Bet" />

        <Button
            android:id="@+id/hit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Hit" />

        <Button
            android:id="@+id/stand_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Stand" />

    </GridLayout>

    <View
        android:id="@+id/bottom_spacer"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/controls_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>