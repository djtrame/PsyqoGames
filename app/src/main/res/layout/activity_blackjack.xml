<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlackjackActivity">

    <com.example.psyqogames.BlackjackView
        android:id="@+id/blackjack_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/controls_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/dealer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dealer"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/blackjack_view"
        app:layout_constraintEnd_toEndOf="@id/blackjack_view"
        app:layout_constraintStart_toStartOf="@id/blackjack_view"
        app:layout_constraintTop_toTopOf="@id/blackjack_view"
        app:layout_constraintVertical_bias="0.091" />

    <TextView
        android:id="@+id/debug_text"
        android:layout_width="381dp"
        android:layout_height="94dp"
        android:text="Debug text"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/blackjack_view"
        app:layout_constraintEnd_toEndOf="@id/blackjack_view"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@id/blackjack_view"
        app:layout_constraintTop_toTopOf="@id/blackjack_view"
        app:layout_constraintVertical_bias="0.409" />

    <LinearLayout
        android:id="@+id/dealer_card_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/blackjack_view"
        app:layout_constraintEnd_toEndOf="@id/blackjack_view"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@id/blackjack_view"
        app:layout_constraintTop_toTopOf="@id/blackjack_view"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/dealer_card1_image"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            tools:src="@drawable/card_back"
            android:background="#FFFFFF"/>

        <ImageView
            android:id="@+id/dealer_card2_image"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            tools:src="@drawable/card_back"
            android:background="#FFFFFF"/>

    </LinearLayout>

    <TextView
        android:id="@+id/player1_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/blackjack_view"
        app:layout_constraintEnd_toEndOf="@id/blackjack_view"
        app:layout_constraintHorizontal_bias="0.855"
        app:layout_constraintStart_toStartOf="@id/blackjack_view"
        app:layout_constraintTop_toTopOf="@id/blackjack_view"
        app:layout_constraintVertical_bias="0.649" />

 

    <GridLayout
        android:id="@+id/controls_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toTopOf="@+id/bottom_spacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blackjack_view">

        <Button
            android:id="@+id/new_game_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="New Game" />

        <Button
            android:id="@+id/draw_card_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Draw Card" />

        <Button
            android:id="@+id/debug_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Debug" />

    </GridLayout>

    <View
        android:id="@+id/bottom_spacer"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/controls_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>